<!-- app/views/users/new.html.erb -->
<h2>Sign Up</h2>

<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div>
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name, required: true, minlength: 20, maxlength: 60 %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>

  <div>
    <%= form.label :address %>
    <%= form.text_area :address, required: true, maxlength: 400 %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true, minlength: 8, maxlength: 16 %>
    <small>Must be 8-16 characters with at least one uppercase letter and one special character</small>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, required: true %>
  </div>

  <div>
    <%= form.submit "Sign Up" %>
  </div>
<% end %>

<p>Already have an account? <%= link_to "Login", login_path %></p>
